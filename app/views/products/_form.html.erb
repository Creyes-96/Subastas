<%= form_with(model: product) do |form| %>
    <% if product.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
            <% product.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>
    <div class="col-4 offset-4">
    
        <div class="input-group mb-3">
            <%= form.label :name, class:"input-group-text" %>
            <%= form.text_field :name, class:"form-control" %>
        </div>

        <div class="input-group mb-3">
            <%= form.label :description, class:"input-group-text" %>
            <%= form.text_field :description, class:"form-control" %>
        </div>

        <div class="input-group mb-3">
            <%= form.label :price, class:"input-group-text" %>
            <%= form.number_field :price, class:"form-control" %>
        </div>

        <div class="input-group mb-3">
            <!--<%= form.label :image, class:"input-group-text" %>-->
            <%= form.file_field :image, class:"form-control" %>
        </div>

    
        <div class="input-group mb-3">
            <%= form.label :limit_date, class:"input-group-text" %>
            <%= form.datetime_select :limit_date, class:"form-control" %>
        </div>
        
         

        <div class="actions">
            <%= form.submit class: "button btn btn-primary btn-lg" %>
        </div>
    <% end %>
</div>
