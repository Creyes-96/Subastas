<p id="notice"><%= notice %></p>

<h1>Product Bids</h1>
<span><h1>Imagen del producto <%= image_tag(@product_imagen.image, class:'thumbnail') %></h1></span>

<table class="table">
    <thead>
        <tr>
            <th class="">ID</th>
            <th class="">User</th>
            <th class="">Amount ($)</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @product_bids.each do |product_bid| %>
            <tr>
                <td class=""><%= product_bid.id %></td>
                <td class=""><%= product_bid.user.username %></td>
                <td class=""><%= product_bid.amount %></td>
                <td><%= link_to '<i class="fas fa-eye icon"></i>'.html_safe, product_bid_url(:id => product_bid.id) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Product Bid', new_product_bid_path %>
