<p id="notice"><%= notice %></p>

<div class="view-title">
    <h1>Bids received</h1>
    <span><h1><%= image_tag(@product_imagen.image, class:'thumbnail-bid-preview') %></h1></span>
</div>
<% if user_signed_in? %>
<div class="bid-actions-back">
    <%= link_to '<i class="fas fa-chevron-circle-left fa-3x"></i>'.html_safe, myitems_path %>
</div>

<% end %>


<table class="table table-hover table-striped">
    <thead class="table-purple">
        <tr>
            <th class="">ID</th>
            <th class="">User</th>
            <th class="">Amount ($)</th>
            <th class="">Deadline</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @product_bids.each do |product_bid| %>
            <tr>
                <td class=""><%= product_bid.id %></td>
                <td class=""><%= product_bid.user.username %></td>
                <td class=""><%= product_bid.amount %></td>
                <td class=""><%= product_bid.created_at %></td>
                <td><%= link_to '<i class="fas fa-eye icon"></i>'.html_safe, product_bid_url(:id => product_bid.id) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

