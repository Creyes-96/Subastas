<p id="notice"><%= notice %></p>

<h1>Product Bids</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_bids.each do |product_bid| %>
      <tr>
        <td><%= link_to 'Show', product_bid %></td>
        <td><%= link_to 'Edit', edit_product_bid_path(product_bid) %></td>
        <td><%= link_to 'Destroy', product_bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

